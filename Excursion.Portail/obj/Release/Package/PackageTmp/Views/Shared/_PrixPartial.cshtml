            <li>
                @Html.LabelFor(m => m.DateDebutP)
                @Html.TextBoxFor(m => m.DateDebutP, new { @class = "dtp" })
            </li>
            <li>
                @Html.LabelFor(m => m.DateFinP)
                @Html.TextBoxFor(m => m.DateFinP, new { @class = "dtp" })
            </li>
            <li>
                <label>
                    Monnaie</label>
                @Html.DropDownList("Device", (SelectList)(DeviceList), "--Select--")
            </li>
            <li>
                @Html.LabelFor(m => m.PrixAdulte)
                @Html.TextBoxFor(m => m.PrixAdulte)
            </li>
            <li>
                @Html.LabelFor(m => m.PrixEnfant)
                @Html.TextBoxFor(m => m.PrixEnfant)
            </li>
            <li>
                @Html.LabelFor(m => m.PrixBebe)
                @Html.TextBoxFor(m => m.PrixBebe)
            </li>
            <li>
            <label>
                    Zones</label>
                @Html.ListBox("Zones", (MultiSelectList)obj as MultiSelectList)
            </li>
        </ol>
        <input type="submit" value="Add Price" onclick="hide('prix');" />
    </fieldset>
