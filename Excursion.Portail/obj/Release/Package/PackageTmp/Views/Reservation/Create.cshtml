 }



 <script type="text/javascript">
 
 $(document).ready(function(){

     $("#SubModified").hide();
     $("#SubCanceled").hide();
     $("#Etat").change(function () {
         if ($(this).val() === "Modified") {
             $("#SubModified").show();
         } else {
             $("#SubModified").hide();
         }

         if ($(this).val() === "Canceled") {
             $("#SubCanceled").show();
         } else {
             $("#SubCanceled").hide();
         }


     });
  });

 </script>


