@*@using MvcGlobalisationSupport;
@using Excursion.Portail.Resources;*@
@model Excursion.Portail.Models.ReservationModel
@{  
    Layout = null;
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Update", "Reservation", FormMethod.Post))
{
    <fieldset>
        <legend>Reservation</legend>
        @if (ViewBag.IsUpdate == true)
        {
            @Html.HiddenFor(model => model.ReservationID)
        }
        <div>
            @Html.LabelFor(model => model.HotelID)
            @Html.EditorFor(model => model.HotelID) 
            <br />
            @Html.ValidationMessageFor(model => model.HotelID)
        </div>
        <div class="editor-field">
            @Html.LabelFor(model => model.NumChamb)
            @Html.EditorFor(model => model.NumChamb)
            <br />
            @Html.ValidationMessageFor(model => model.NumChamb)
        </div>
        <div class="editor-field">
            @Html.LabelFor(model => model.NumTicket)
            @Html.EditorFor(model => model.NumTicket)
            <br />
            @Html.ValidationMessageFor(model => model.NumTicket)
        </div>
        <p>
            @if (ViewBag.IsUpdate == true)
            {
                <input type="submit" value="Update" id="btnUpdate" name="cmd" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
            }
            else
            {
                <input type="submit" value="Save" id="btnSave" name="cmd" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
            }
            <input type="button" value="Cancel" id="btncancel" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />

        </p>
    </fieldset>
}
